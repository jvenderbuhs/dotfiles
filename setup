#!/bin/bash
cp ./home/.bash_profile ~/.bash_profile
cp ./home/.gitconfig ~/.gitconfig
cp ./home/.gitignore ~/.gitignore
cp ./home/.tmux.conf ~/.tmux.conf
mkdir ~/.tmux
cp ./home/.tmux/dev ~/.tmux/dev
mkdir ~/.helpers
cp ./home/.helpers/battery ~/.helpers/battery
mkdir ~/.config
cp -r ./home/.config/nvim ~/.config/.
cp ./home/.agignore ~/.agignore

echo "----------------------------------------------------------------------------------"
echo "| Programs To Install:                                                           |"
echo "| - the_silver_searcher                                                          |"
echo "| - tmux                                                                         |"
echo "| - nvim                                                                         |"
echo "| - jq                                                                           |"
echo "| - ranger                                                                       |"
echo "| - ruby                                                                         |"
echo "| - rvm                                                                          |"
echo "| - onefetch                                                                     |"
echo "----------------------------------------------------------------------------------"
echo "|Install Nerd Fonts, and Set for Terminal:                                       |"
echo "| brew tap homebrew/cask-fonts                                                   |"
echo "| brew cask install font-hack-nerd-font                                          |"
echo "----------------------------------------------------------------------------------"

