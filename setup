#!/bin/bash

cp ./home/.bash_profile ~/.bash_profile 
cp ./home/.gitconfig ~/.gitconfig 
cp ./home/.tmux.conf ~/.tmux.conf
cp ./home/.vimrc ~/.vimrc

echo "----------------------------------------------------------------------------------"
echo "| Ensure the following were run at some point on this machine:                   |"
echo "| git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim |"
echo "| Log into vim and run ':PluginInstall'                                          |"
echo "----------------------------------------------------------------------------------"
